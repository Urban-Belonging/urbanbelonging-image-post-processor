#!/bin/bash

source ./bin/common

export DEBUG=""
export NODE_ENV="local"
export SPACES_CDN_ACCESS_KEY_ID="$URBANBELONGING_SPACES_CDN_ACCESS_KEY_ID"
export SPACES_CDN_SECRET_ACCESS_KEY="$URBANBELONGING_SPACES_CDN_SECRET_ACCESS_KEY"
export SPACES_CDN_BUCKET_NAME="$URBANBELONGING_SPACES_CDN_BUCKET_NAME"
export SPACES_CDN_ENDPOINT="$URBANBELONGING_SPACES_CDN_ENDPOINT"
export SPACES_CDN_URL="$URBANBELONGING_SPACES_CDN_URL"

./node_modules/.bin/tsc-watch --onSuccess "node --inspect=0.0.0.0:9330 ."
